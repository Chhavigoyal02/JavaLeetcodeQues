class Solution {
    public String toLowerCase(String s) {
        String ans="";
        int a=0;
        for(int i=0;i<s.length();i++){
            a=s.charAt(i);
            if(s.charAt(i)>=65 && s.charAt(i)<=90){
                a=s.charAt(i)+32;
                ans=ans+(char)a;
            }
            else{
                ans=ans+(char)a;
            }
        }
        return ans;
    }
}
